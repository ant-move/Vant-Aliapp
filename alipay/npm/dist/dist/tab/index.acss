.tab-index {
    display: block;
    height: initial;
}
@import "../common/index.acss";

.tab-index {
    -webkit-flex-shrink: 0;
    flex-shrink: 0;
    width: 100%;
}

.tab-index .van-tab__pane,
.tab-index {
    box-sizing: border-box;
}

.tab-index .van-tab__pane {
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
}

.tab-index .van-tab__pane--active {
    height: auto;
}

.tab-index .van-tab__pane--inactive {
    height: 0;
    overflow: visible;
}

.demo-block-index {
    display: block;
    height: initial;
}
@import "../../dist/common/index.acss";

.demo-block-index .demo-block__title {
    margin: 0;
    padding: 20px 15px 15px;
    color: rgba(69, 90, 100, 0.6);
    font-weight: 400;
    font-size: 14px;
}

.demo-block-index .demo-block__card {
    overflow: hidden;
    border-radius: 8px;
}

.demo-block-index .demo-block--padding {
    padding: 0 15px;
}

.demo-block-index .demo-block--padding .demo-block__title {
    padding-left: 0;
}

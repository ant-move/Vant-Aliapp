<demo-block title="文字提示" padding>
  <van-button type="primary" bind:click="showToast" class="demo-margin-right">文字提示</van-button>
  <van-button type="primary" bind:click="showLongToast">长文字提示</van-button>
</demo-block>

<demo-block title="加载提示" padding>
  <van-button type="primary" bind:click="showLoadingToast" class="demo-margin-right">加载提示</van-button>
  <van-button type="primary" bind:click="showCustomLoadingToast">自定义加载图标</van-button>
</demo-block>

<demo-block title="成功/失败提示" padding>
  <van-button type="info" bind:click="showSuccessToast" class="demo-margin-right">成功提示</van-button>
  <van-button type="danger" bind:click="showFailToast">失败提示</van-button>
</demo-block>

<demo-block title="动态更新提示" padding>
  <van-button type="primary" bind:click="showCustomizedToast">动态更新提示</van-button>
</demo-block>

<van-toast id="van-toast" />

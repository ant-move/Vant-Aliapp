<demo-block title="基础用法">
  <van-circle type="2d" value="{{ value }}" text="{{ value }}%" is-wx/>
  <van-circle type='2d' value='{{ value }}' text='{{ value }}%' ref='saveChildRef2' is-alipay id='canvas1'>
    </van-circle  >
</demo-block>

<demo-block title="样式定制">
  <van-circle value="{{ value }}" stroke-width="{{ 6 }}" text="宽度定制" is-wx/>
  <van-circle value="{{ value }}" layer-color="#eee" color="#ee0a24" text="颜色定制" is-wx/>
  <van-circle value="{{ value }}" color="{{ gradientColor }}" text="渐变色" is-wx/>
  <van-circle value="{{ value }}" color="#07c160" clockwise="{{ false }}" text="逆时针" is-wx/>
  <van-circle value="{{ value }}" size="120" text="大小定制" is-wx/>

  <van-circle value='{{ value }}' stroke-width='{{ 6 }}' type='2d' text='宽度定制' ref='saveChildRef4' id='canvas2' is-alipay>
    </van-circle>
    <van-circle value='{{ value }}' layer-color='#eee' type='2d' color='#ee0a24' text='颜色定制' ref='saveChildRef5' id='canvas3' is-alipay>
    </van-circle>
    <van-circle value='{{ value }}' type='2d' color='{{ gradientColor }}' text='渐变色' ref='saveChildRef6' id='canvas4' is-alipay>
    </van-circle>
    <van-circle value='{{ value }}' type='2d' color='#07c160' clockwise='{{ false }}' text='逆时针' ref='saveChildRef7' id='canvas5' is-alipay>
    </van-circle>
    <van-circle value='{{ value }}' type='2d' size='{{120}}' text='大小定制' ref='saveChildRef8' id='canvas6' is-alipay>
    </van-circle>
</demo-block>

<van-button type="primary" size="small" data-step="10" bind:click="run">增加</van-button>
<van-button type="danger" size="small" data-step="-10" bind:click="run">减少</van-button>
